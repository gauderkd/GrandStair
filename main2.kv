#:import NoTransition kivy.uix.screenmanager.NoTransition
MyScreenManager:
    transition: NoTransition()
    IntroScreen:
    ExitScreen:

<IntroScreen>:
    name: 'intro'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'first screen!'
            font_size: 30
        Button:
            text: 'goto second screen'
            font_size: 30
            on_release: app.root.current = 'exit'

<ExitScreen>:
    name: 'exit'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'second screen!'
            font_size: 30
        Button:
            text: 'goto first screen'
            font_size: 30
            on_release: app.root.current = 'intro'